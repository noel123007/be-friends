{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express API",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/api",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/api/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
